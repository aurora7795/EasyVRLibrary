<Window x:Class="comPortConsole.Console"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:comPortConsole"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" Closing="Window_Closing">
    <Grid>
        <TextBox x:Name="RequestTb" HorizontalAlignment="Left" Height="96" Margin="10,36,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="497"/>
        <Label Content="Response:" HorizontalAlignment="Left" Margin="10,182,0,0" VerticalAlignment="Top"/>
        <Button x:Name="SubmitBtn" Content="Submit" HorizontalAlignment="Left" Margin="432,158,0,0" VerticalAlignment="Top" Width="75" Click="SubmitBtn_Click"/>
        <TextBox x:Name="ResponseTb" HorizontalAlignment="Left" Height="96" Margin="10,213,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="497"/>
        <Label Content="Request:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
